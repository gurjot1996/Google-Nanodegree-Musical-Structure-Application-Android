            <TextView
                android:text="@string/song2singer"
                style="@style/singername"
                android:layout_below="@id/song2name"
                android:layout_toRightOf="@id/songimage2"
                />
        </RelativeLayout>
        <TextView
            style="@style/linesep" />

        <RelativeLayout
            style="@style/relativelayout"
            >

            <ImageView
                style="@style/songimage"
                android:id="@+id/songimage3"
                android:src="@drawable/play"/>
            <TextView
                android:text="@string/song3"
                style="@style/songnametext"
                android:layout_toRightOf="@id/songimage3"
                android:id="@+id/song3name"
                />
            <TextView
                style="@style/relativelayout"
                android:layout_height="80dp"
                android:id="@+id/song3"/>
            <TextView
                android:text="@string/song3singer"
                style="@style/singername"
                android:layout_below="@id/song3name"
