                android:text="@string/song4singer"
                style="@style/singername"
                android:layout_below="@id/song4name"
                android:layout_toRightOf="@id/songimage4"
                />
        </RelativeLayout>
        <TextView
            style="@style/linesep" />
        <RelativeLayout
            style="@style/relativelayout"
            >

            <ImageView
                style="@style/songimage"
                android:id="@+id/songimage5"
                android:src="@drawable/play"/>
